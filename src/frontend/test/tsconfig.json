{
  "extends": "../tsconfig.app.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "moduleDetection": "auto",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}